# Application
APP_NAME="Chat Application"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Frontend
FRONTEND_URL=http://localhost:3000

# Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=chat_app
DB_USERNAME=chat_user
DB_PASSWORD=chat_password

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Elasticsearch
SCOUT_DRIVER=elasticsearch
ELASTICSEARCH_HOST=http://elasticsearch:9200

# Pusher/WebSockets
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=chat-app
PUSHER_APP_KEY=chat-app-key
PUSHER_APP_SECRET=chat-app-secret
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1

# OAuth2 - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost/auth/google/callback

# OAuth2 - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost/auth/github/callback

# OpenAI for LLM
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# 2FA
TWO_FACTOR_ENABLED=true

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
